run = "bash start.sh"
hidden = [".config", "target", "frontend/node_modules", "frontend/dist"]

[nix]
channel = "stable-23_11"

[deployment]
build = ["sh", "-c", "cd frontend && npm install && npm run build && cd .. && mvn clean package"]
run = ["sh", "-c", "java -jar target/work-tracker-1.0.0.jar"]

[[ports]]
localPort = 8080
externalPort = 80
